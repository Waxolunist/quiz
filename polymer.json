{
    "entrypoint": "index.html",
    "shell": "src/my-app.js",
    "sources": [
        "images/**/*",
        "assets/**/*",
        ".nojekyll"
    ],
    "extraDependencies": [
        "manifest.json",
        "node_modules/@webcomponents/webcomponentsjs/*.js",
        "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
        "node_modules/@webcomponents/webcomponentsjs/bundles/*.js",
        "node_modules/howler/dist/howler.min.js",
        "node_modules/qr-scanner/src/*.js"
    ],
    "builds": [{
        "preset": "es6-bundled",
        "basePath": "/quiz/",
        "bundle": {
            "excludes": ["node_modules/qr-scanner/src/qr-scanner.js"]
        },
        "js": {
            "minify": {
                "exclude": ["node_modules/qr-scanner/src/qr-scanner.js"]
            },
            "compile": false
        }
    }],
    "moduleResolution": "node",
    "npm": true,
    "lint": {
        "rules": [
            "polymer-3"
        ]
    }
}